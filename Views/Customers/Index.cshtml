@model List<Vidlib_v2.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@if (Model.Count == 0)
{
    <text>No customers available ! </text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
            <tr>
                <td>@Html.ActionLink(customer.Name,"Details","Customers",new { id=customer.Id},new { @class="ui-btn-right"})</td>
                <td>@customer.MemberShipType.DiscountRate%</td>
            </tr>

            }
        </tbody>

    </table>
   
}